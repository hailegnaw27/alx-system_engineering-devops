#!/usr/bin/env bash

# This script displays the PID and process name of processes containing the word "bash"

# Get the current script's PID
SCRIPT_PID=$$

# Iterate through all running processes
for PROC in /proc/*/cmdline; do
  if grep -q "bash" "$PROC"; then
    # Extract the PID from the process path
    PID=$(basename $(dirname "$PROC"))
    # Get the process name
    PROC_NAME=$(ps -p $PID -o comm=)
    # Display the PID and process name
    echo "$PID $PROC_NAME"
  fi
done
